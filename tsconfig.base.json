{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "preserve",
    "lib": [
      "es2022",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@canserkanuren/about": [
        "packages/about/src/index.ts"
      ],
      "@canserkanuren/common": [
        "packages/common/src/index.ts"
      ],
      "@canserkanuren/data": [
        "packages/data/src/index.ts"
      ],
      "@canserkanuren/education": [
        "packages/education/src/index.ts"
      ],
      "@canserkanuren/profile": [
        "packages/profile/src/index.ts"
      ],
      "@canserkanuren/skills": [
        "packages/skills/src/index.ts"
      ],
      "@canserkanuren/store": [
        "packages/store/src/index.ts"
      ],
      "@canserkanuren/ui-accordion-helm": [
        "packages/primitives/ui-accordion-helm/src/index.ts"
      ],
      "@canserkanuren/ui-button-helm": [
        "packages/primitives/ui-button-helm/src/index.ts"
      ],
      "@canserkanuren/ui-icon-helm": [
        "packages/primitives/ui-icon-helm/src/index.ts"
      ],
      "@canserkanuren/ui-label-helm": [
        "packages/primitives/ui-label-helm/src/index.ts"
      ],
      "@canserkanuren/ui-switch-helm": [
        "packages/primitives/ui-switch-helm/src/index.ts"
      ],
      "@canserkanuren/ui-typography-helm": [
        "packages/primitives/ui-typography-helm/src/index.ts"
      ],
      "@canserkanuren/work-experiences": [
        "packages/work-experiences/src/index.ts"
      ],
      "@canserkanuren/ui-sheet-helm": [
        "packages/primitives/ui-sheet-helm/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
